.main_chat
  .main_chat__group
    .main_chat__group__main-header__left-box
      .main_chat__group__main-header__left-box__name
        test
      .main_chat__group__main-header__left-box__member
        member:masa
    .main_chat__group__main-header__right-box
      = link_to "#", class:"main_chat__group__main-header__right-box__edit-btn" do
        edit

  .main_chat__message
    .main_chat__message__box
      .main_chat__message__box__upper-info
        %p.main_chat__message__box__upper-info__talker
          masa
        %p.main_chat__message__box__upper-info__date
          2019/11/20(Wed)17:43:01
      %p.main_chat__message__box__upper-info__text
        aaaaaaaaaaaaaa

  .main_chat__message-form
    .main_chat__message-form__new-message
      .input-box
        %input{type: "text", class: "input-box__text", placeholder: "type a message"}
        %label{class: "input-box__image"}
          = icon('fas','image')
          %input{type: "file", class: "input-box__image__file"}
      %input{type: "submit", class: "submit-btn"}



